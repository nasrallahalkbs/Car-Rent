/* تنسيق أزرار الإجراءات الشفافة - v1745179510 */

/* تنسيق الأزرار المشتركة لجميع الصفحات */
.btn-view, .btn-pay, .btn-modify, .btn-cancel, .btn-reactivate, 
.btn-primary, .btn-success, .btn-info, .btn-warning, .btn-danger,
.action-button {
  background-color: transparent !important;
  border: 1.5px solid;
  color: inherit;
  transition: all 0.3s ease;
}

/* أزرار صفحة الحجوزات */
.btn-view {
  border-color: #0d6efd;
  color: #0d6efd;
}

.btn-pay {
  border-color: #198754;
  color: #198754;
}

.btn-modify, .btn-reactivate {
  border-color: #ffc107;
  color: #856404;
}

.btn-cancel {
  border-color: #dc3545;
  color: #dc3545;
}

/* عند تحويم المؤشر على الأزرار */
.btn-view:hover, .btn-pay:hover, .btn-modify:hover, 
.btn-cancel:hover, .btn-reactivate:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  background-color: transparent !important;
}

/* أزرار Bootstrap - لوحة الإدارة */
.action-buttons .btn-primary {
  color: #0d6efd;
  border-color: #0d6efd;
  background-color: transparent !important;
}

.action-buttons .btn-success {
  color: #198754;
  border-color: #198754;
  background-color: transparent !important;
}

.action-buttons .btn-info {
  color: #0dcaf0;
  border-color: #0dcaf0;
  background-color: transparent !important;
}

.action-buttons .btn-warning {
  color: #ffc107;
  border-color: #ffc107;
  background-color: transparent !important;
}

.action-buttons .btn-danger {
  color: #dc3545;
  border-color: #dc3545;
  background-color: transparent !important;
}

/* تنسيق أزرار القالب الفاخر */
.action-button {
  border: 1.5px solid;
  background: transparent !important;
  box-shadow: none;
}

.action-button.btn-primary {
  color: #0d6efd;
  border-color: #0d6efd;
}

.action-button.btn-success {
  color: #198754;
  border-color: #198754;
}

.action-button.btn-danger {
  color: #dc3545;
  border-color: #dc3545;
}

/* أزرار القالب المؤسسي */
.corporate-button {
  background-color: transparent !important;
  border: 1.5px solid;
}